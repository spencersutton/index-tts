from typing import Any, Literal

from .base import BaseInferenceType, dataclass_with_extra

type ImageToTextEarlyStoppingEnum = Literal["never"]

@dataclass_with_extra
class ImageToTextGenerationParameters(BaseInferenceType):
    do_sample: bool | None = ...
    early_stopping: bool | ImageToTextEarlyStoppingEnum | None = ...
    epsilon_cutoff: float | None = ...
    eta_cutoff: float | None = ...
    max_length: int | None = ...
    max_new_tokens: int | None = ...
    min_length: int | None = ...
    min_new_tokens: int | None = ...
    num_beam_groups: int | None = ...
    num_beams: int | None = ...
    penalty_alpha: float | None = ...
    temperature: float | None = ...
    top_k: int | None = ...
    top_p: float | None = ...
    typical_p: float | None = ...
    use_cache: bool | None = ...

@dataclass_with_extra
class ImageToTextParameters(BaseInferenceType):
    generation_parameters: ImageToTextGenerationParameters | None = ...
    max_new_tokens: int | None = ...

@dataclass_with_extra
class ImageToTextInput(BaseInferenceType):
    inputs: Any
    parameters: ImageToTextParameters | None = ...

@dataclass_with_extra
class ImageToTextOutput(BaseInferenceType):
    generated_text: Any
    image_to_text_output_generated_text: str | None = ...
